{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "es2015"],
    "types": ["node", "jest", "superagent"],
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "outDir": "lib",
    "rootDir": "src",
    "inlineSourceMap": true
  },
  "include": ["src"],
  "exclude": ["lib", "node_modules"]
}
